{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noEmit": false,
    "outDir": "../dist",
    "paths": {
      "@server/*": ["./*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": ["./**/*.ts"]
}
